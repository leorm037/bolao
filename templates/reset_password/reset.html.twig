{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Redefinir senha{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_login') }}" class="text-decoration-none"><twig:ux:icon name="bi:door-closed" /> Entrar</a></li>
    <li class="breadcrumb-item active"><twig:ux:icon name="bi:key-fill" /> Redefinir senha</li>
{% endblock %}

{% block body %}
    {{ form_start(resetForm) }}
    <div class="row justify-content-md-center">
        <div class="col col-xl-4 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient">
                    <h1 class="h4 m-0"><twig:ux:icon name="bi:key" /></i> Redefinir senha</h1>
                </div>
                <div class="card-body">
                    {{ form_row(resetForm.plainPassword) }}
                </div>
                {{ include('_formFooter.html.twig', {'voltar_href': path('app_login')}) }}
            </div>
        </div>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
