{# templates/loteria_rateio/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Loteria :: Rateio{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_loteria_index') }}" class="text-decoration-none"><twig:ux:icon name="meteor-icons:clover" class="Icon icon-rotate-45" /> Loteria</a></li>
    <li class="breadcrumb-item active"><twig:ux:icon name="material-symbols:groups" /> Rateio</li>
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 m-0">
                        <twig:ux:icon name="material-symbols:groups" /> Rateio
                    </h1>
                </div>
                <div>
                    <a href="{{ path('app_loteria_rateio_new', {'uuid': loteria.uuid}) }}" class="btn btn-secondary btn-sm bg-gradient shadow-sm">
                        <twig:ux:icon name="bi:plus-circle" /> Novo
                    </a>
                </div>
            </div>
        </div>
                        
        {{ include('loteria/_loteriaHeader.html.twig', {'loteria': loteria}) }}
        
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered shadow-sm">
                <thead>
                    <tr>
                        <th class="d-table-cell d-xl-none">Rateio</th>
                        <th class="d-none d-xl-table-cell">Quantidade de dezenas jogadas</th>
                        <th class="d-none d-xl-table-cell">Quantidade de dezenas acertadas</th>
                        <th class="d-none d-xl-table-cell">Quantidade de dezenas premiadas</th>
                        <th class="d-none d-xl-table-cell">Quantidade de prêmios</th>
                        <th class="d-none d-xl-table-cell">Atualização</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {% for rateio in rateios %}
                        <tr>
                            <td class="d-table-cell d-xl-none text-break">
                                <p>
                                    <strong>Quantidade de dezenas jogadas</strong><br/>
                                    {{ rateio.quantidadeDezenasJogadas }}
                                </p>
                                <p>
                                    <strong>Quantidade de dezenas acertadas</strong><br/>
                                    {{ rateio.quantidadeDezenasAcertadas }}
                                </p>
                                <p>
                                    <strong>Quantidade de dezenas premiadas</strong><br/>
                                        {{ rateio.quantidadeDezenasPremiadas }}
                                </p>
                                <p>
                                    <strong>Quantidade de prêmios</strong><br/>
                                        {{ rateio.quantidadePremios }}
                                </p>
                                <p>
                                    <strong>Atualização</strong><br/>
                                    {{ rateio.updatedAt ? rateio.updatedAt|date('d/m/Y H:i', 'America/Sao_Paulo') : rateio.createdAt|date('d/m/Y H:i', 'America/Sao_Paulo') }}
                                </p>
                            </td>
                            <td class="d-none d-xl-table-cell align-middle">{{ rateio.quantidadeDezenasJogadas }}</td>
                            <td class="d-none d-xl-table-cell align-middle">{{ rateio.quantidadeDezenasAcertadas }}</td>
                            <td class="d-none d-xl-table-cell align-middle">{{ rateio.quantidadeDezenasPremiadas }}</td>
                            <td class="d-none d-xl-table-cell align-middle">{{ rateio.quantidadePremios }}</td>
                            <td class="d-none d-xl-table-cell align-middle">
                                {{ rateio.updatedAt ? rateio.updatedAt|date('d/m/Y H:i', 'America/Sao_Paulo') : rateio.createdAt|date('d/m/Y H:i', 'America/Sao_Paulo') }}
                            </td>
                            <td class="text-center align-middle">
                                <div class="dropdown dropstart">
                                    <button class="btn btn-sm btn-secondary bg-gradient shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <twig:ux:icon name="bi:three-dots-vertical" />
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a data-loading="true" class="dropdown-item" href="{{ path('app_loteria_rateio_edit', {'uuid': loteria.uuid, 'uuidRateio': rateio.uuid}) }}"><twig:ux:icon name="bi:pencil" /> Alterar</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><button type="button" class="dropdown-item text-bg-danger" data-controller="delete" data-action="click->delete#show" data-delete-uuid-value="{{ rateio.uuid }}" data-delete-mensagem-value="{{ 'Deseja excluir <strong>o rateio</strong>?' }}"><twig:ux:icon name="bi:trash3" /> Excluir</button></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center"><twig:ux:icon name="bi:emoji-frown" /> Nenhum registro encontrado</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ include('_tableFooter.html.twig', {'paginacao': rateios}) }}
    </div>
    {{ include('_deleteModal.html.twig', {'deleteAction': path('app_loteria_rateio_delete', {'uuid': loteria.uuid})}) }}
</div>
{% endblock %}
