{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Entrar{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><twig:ux:icon name="bi:door-closed" /> Entrar</li>
{% endblock %}

{% block body %}
    <form action="{{ path('app_login') }}" method="post" data-loading="true">
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        <div class="row justify-content-md-center">
            <div class="col col-xl-4 col-md-6">
                <div class="card shadow">
                    <div class="card-header">
                        <h1 class="h4 m-0"><twig:ux:icon name="bi:door-closed" /> Entrar</h1>                            
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="username" class="form-label required">E-mail</label>
                            <div class="input-group">
                                <span class="input-group-text" id="username-icone"><twig:ux:icon name="bi:envelope-at" /></span>
                                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" autocomplete="username" placeholder="name@example.com" required="required">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label required">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text" id="password-icone"><twig:ux:icon name="bi:key" /></span>
                                <input type="password" class="form-control" id="password" name="_password" autocomplete="current-password" required="required">
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember">
                                <label class="form-check-label" for="remember">Ficar conectado</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a href="{{ path('app_forgot_password_request') }}" data-loading="true" class="btn btn-outline-secondary btn-sm shadow"><twig:ux:icon name="bi:key" /> Recuperar senha</a>
                            </div>
                            <div>
                                <button type="reset" class="btn btn-secondary bg-gradient btn-sm shadow"><twig:ux:icon name="carbon:clean" /> Limpar</button>
                                <button type="submit" class="btn btn-primary bg-gradient btn-sm shadow"><twig:ux:icon name="bi:floppy" /> Salvar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
