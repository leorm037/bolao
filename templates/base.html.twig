{# template/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="generator" content="">

        <title>{% block title %}Bolão{% endblock %}</title>        

        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('styles/app.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts_header %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header class="mb-3 border-bottom">
            <nav id="menu" class="navbar navbar-expand-lg bg-bolao">
                <div class="container-fluid">
                    <a class="navbar-brand navbar-bg-bolao" href="{{ path('app_bolao_index') }}">
                        <twig:ux:icon name="material-symbols-light:family-group" /> Bolão
                    </a>
                    <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Menu de navegação">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarMenu">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            {% include '_menu.html.twig' %}
                        </ul>
                    </div>
                </div>
            </nav>
            <nav id="breadcrumb" aria-label="breadcrumb" class="bg-bolao-secondary shadow border-bottom border-bolao" style="--bs-breadcrumb-divider: '>';">
                <ol class="breadcrumb m-0 p-2">
                    <li class="breadcrumb-item"><a href="{{ path('app_bolao_index') }}" class="text-decoration-none"><twig:ux:icon name="bi:house-fill" /> Página inicial</a></li>
                        {% block breadcrumb %}{% endblock %}
                </ol>
            </nav>
        </header>

        <main class="mb-3">
            {% include '_flash.html.twig' %}
            <div class="container-fluid">
                {% block body %}{% endblock %}
            </div>
        </main>

        {% include '_footer.html.twig' %}

        {% block javascripts_footer %}
            <script src="{{ asset('jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('loadingoverlay/loadingoverlay.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
