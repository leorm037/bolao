{# templates/apostador/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} :: Apostadores
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><twig:ux:icon name="material-symbols:groups" /> Apostadores</li>
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 m-0">
                        <twig:ux:icon name="material-symbols:groups" /> Apostadores
                    </h1>
                </div>
                <div>
                    <div class="btn-group">
                        <a data-loading="true" href="{{ path('app_apostador_new') }}" class="btn btn-secondary btn-sm bg-gradient shadow-sm">
                            <twig:ux:icon name="bi:plus-circle" /> Novo
                        </a>
                        <button type="button" class="btn btn-secondary btn-sm bg-gradient shadow-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Novo apostador</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('app_apostador_export') }}" class="dropdown-item">
                                    <twig:ux:icon name="bi:cloud-arrow-down" /> Exportar
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_apostador_new') }}" class="dropdown-item">
                                    <twig:ux:icon name="bi:cloud-arrow-up" /> Importar
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body border-bottom">
            <form name="apostador_filter" id='apostador_filter' method="get" data-loading="true">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="filter_nome" class="form-label">Nome</label>
                            <div class="input-group">
                                <span class="input-group-text" id="bolao_icon"><twig:ux:icon name="bi:alphabet" /></span>
                                <input type="text" name="filter_nome" value="{{ filter_nome }}" class="form-control" id="filter_nome" aria-label="Nome">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end align-items-end">
                        <div>
                            <button type="button" id="filter_button_limpar" class="btn btn-secondary btn-sm bg-gradient shadow-sm me-1"><twig:ux:icon name="carbon:clean" /> Limpar</button>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary btn-sm bg-gradient shadow-sm"><twig:ux:icon name="bi:funnel-fill" /> Filtrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered shadow-sm">
                <thead>
                    <tr>
                        <th class="d-table-cell d-xl-none">Apostador</th>
                        <th class="d-none d-xl-table-cell">Nome</th>
                        <th class="d-none d-xl-table-cell">E-mail</th>
                        <th class="d-none d-xl-table-cell">Contato</th>
                        <th class="d-none d-xl-table-cell">Atualização</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {% for apostador in apostadores %}
                        <tr>
                            <td class="d-table-cell d-xl-none text-break">
                                <p>
                                    <strong>Nome</strong><br/>
                                    {{ apostador.nome }}
                                </p>
                                <p>
                                    <strong>E-mail</strong><br/>
                                    {{ apostador.email }}
                                </p>
                                <p>
                                    <strong>Contato</strong><br/>
                                    {% if apostador.celular %}
                                        {{ apostador.celular }}
                                    {% else %}    
                                        {{ apostador.telefone }}
                                    {% endif %}
                                </p>
                                <p>
                                    <strong>Atualização</strong><br/>
                                    {{ apostador.updatedAt ? apostador.updatedAt|date('d/m/Y H:i', 'America/Sao_Paulo') : apostador.createdAt|date('d/m/Y H:i', 'America/Sao_Paulo') }}
                                </p>
                            </td>
                            <td class="d-none d-xl-table-cell align-middle">{{ apostador.nome }}</td>
                            <td class="d-none d-xl-table-cell align-middle">{{ apostador.email }}</td>
                            <td class="d-none d-xl-table-cell align-middle">
                                {% if apostador.celular %}
                                    {{ apostador.celular }}
                                {% else %}    
                                    {{ apostador.telefone }}
                                {% endif %}
                            </td>
                            <td class="d-none d-xl-table-cell align-middle">
                                {{ apostador.updatedAt ? apostador.updatedAt|date('d/m/Y H:i', 'America/Sao_Paulo') : apostador.createdAt|date('d/m/Y H:i', 'America/Sao_Paulo') }}
                            </td>
                            <td class="text-center align-middle">
                                <div class="dropdown dropstart">
                                    <button class="btn btn-sm btn-secondary bg-gradient shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <twig:ux:icon name="bi:three-dots-vertical" />
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a data-loading="true" class="dropdown-item" href="{{ path('app_apostador_edit', {'uuid': apostador.uuid}) }}"><twig:ux:icon name="bi:pencil" /> Alterar</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><button type="button" class="dropdown-item text-bg-danger" data-controller="delete" data-action="click->delete#show" data-delete-uuid-value="{{ apostador.uuid }}" data-delete-mensagem-value="{{ 'Deseja excluir <strong>"' ~ apostador.nome ~ '"</strong>?' }}"><twig:ux:icon name="bi:trash3" /> Excluir</button></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center"><twig:ux:icon name="bi:emoji-frown" /> Nenhum registro encontrado</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ include('_tableFooter.html.twig', {'paginacao': apostadores}) }}
    </div>
    {{ include('_deleteModal.html.twig', {'deleteAction': path('app_apostador_delete')}) }}
{% endblock %}

{% block javascripts_footer %}
    {{ parent() }}
    <script src="{{ asset('apostador/index.js') }}"></script>
{% endblock %}